# Allow assets to load normally
/wp-includes/js/* /wp-includes/js/*
/wp-content/plugins/* /wp-content/plugins/*
/wp-content/themes/* /wp-content/themes/*
/wp-content/uploads/* /wp-content/uploads/*

# Handle WordPress admin URLs
/wp-admin/* /404.html
/wp-login.php /404.html
/wp-cron.php /404.html

# Redirect old WordPress URLs to new static structure
/index.php?p=* /index.html
/index.php?page_id=* /index.html

# Fallback for any missing pages (but not assets)
/*.html /index.html
